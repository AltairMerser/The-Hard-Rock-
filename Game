package Game;

import Game.Characters.GG;
import Game.Characters.Game_Characters;
import Game.Locations.Game_Locations;

import java.util.Random;
import java.util.Scanner;


public class Game {

    public static boolean npc_1 = false;
    public static boolean npc_2 = false;
    public static boolean npc_3 = false;
    public static boolean npc_4 = false;
    public static boolean npc_5 = false;
    public static boolean npc_6 = false;
    public static boolean npc_7 = false;
    public static boolean npc_8 = false;
    public static boolean npc_9 = false;
    public static boolean npc_10 = false;


    public static void main(String[] args) {
        System.out.println("\"Странный голос доносящийся словно из головы\"");
        System.out.println("Как тебя зовут");
        string(GG.gg.name);
    }

    public static String string(String gg_name) {
        Scanner scanner = new Scanner(System.in);
        GG.gg.name = scanner.next();
        Game_Locations.start_location(GG.gg.name);
        return GG.gg.name;
    }

    public static void help() {
        System.out.println(" ");
        System.out.println("чтож... " + GG.gg.name + " слушай... ");
        System.out.println(" \"выпад\" - для атаки");
        System.out.println(" \"сильный_выпад\" - для мощной атаки");
        System.out.println(" \"защита\" - чтобы переждать и пополнить силы ");
        System.out.println(" \"свалить\" - чтобы свалить (как это не странно)");
        System.out.println(" \"ну_нахер\" - самоубийство");
        System.out.println(" ");
        System.out.println(" Также в этой игре есть такая вещь как критический удар, и даже случается так, что он иногда встречается");
        System.out.println("Но я бы не сильно на него надеялся ");
        System.out.println("Ибо даже я не знаю как это работает ");
        System.out.println(" ");
        System.out.println("Ну все ты меня не слышал, я тебе не помогал... ");
        System.out.println(" ");
        if (npc_6 == false && npc_7 == false && npc_8 == false && npc_9 == false && npc_10 == false ) {
            fight_npc_outset();
        }
        if (npc_1 == false && npc_2 == false && npc_3 == false && npc_4 == false && npc_5 == false ) {

        }
    }

    public static void fight_npc_outset(){
            if (npc_1 == true) {
                System.out.println("Твой противник : " + Game_Characters.npc1.name);
                System.out.println("Здоровье противника : " + Game_Characters.npc1.hp);
                System.out.println("Enemy DEF " + Game_Characters.npc1.def);
            }
            if (npc_2 == true) {
                System.out.println("Твой противник : " + Game_Characters.npc2.name);
                System.out.println("Здоровье противника : " + Game_Characters.npc2.hp);
            }
            if (npc_3) { ;
                System.out.println("Твой противник : " + Game_Characters.npc3.name);
                System.out.println("Здоровье противника : " + Game_Characters.npc3.hp);
            }
            if (npc_4) {
                System.out.println("Твой противник : " + Game_Characters.npc4.name);
                System.out.println("Здоровье противника : " + Game_Characters.npc4.hp);
            }
            if (npc_5) {
                System.out.println("Твой противник : " + Game_Characters.npc5.name);
                System.out.println("Здоровье противника : " + Game_Characters.npc5.hp);
            }
        System.out.println("Твое здоровье : " + GG.gg.hp);
        System.out.println("\"выпад\"");
        System.out.println(" ");
                fight_proccess_outset();
    }
        public static void fight_proccess_outset(){
            boolean krit;
            Scanner scanner = new Scanner(System.in);
            Random random = new Random();
            krit =  random.nextBoolean();
            String hit;
            System.out.println("\"помощь\"");
            hit = scanner.next();
                if (hit.equals("выпад")){
                    GG.gg.st -= 15;
                    if (npc_1) {
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc1.dmg - GG.gg.def + (Math.random() * 5));
                        Game_Characters.npc1.hp = Game_Characters.npc1.hp - (GG.gg.dmg - Game_Characters.npc1.def + (Math.random() * 5));
                    }
                    if (npc_2){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc2.dmg - GG.gg.def + (Math.random() * 8));
                        Game_Characters.npc2.hp = Game_Characters.npc2.hp - (GG.gg.dmg - Game_Characters.npc2.def + (Math.random() * 8));
                    }
                    if (npc_3){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc3.dmg - GG.gg.def + (Math.random() * 11));
                        Game_Characters.npc3.hp = Game_Characters.npc3.hp - (GG.gg.dmg - Game_Characters.npc3.def + (Math.random() * 11));
                    }
                    if (npc_4){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc4.dmg - GG.gg.def + (Math.random() * 10));
                        Game_Characters.npc4.hp = Game_Characters.npc4.hp - (GG.gg.dmg - Game_Characters.npc4.def + (Math.random() * 10));
                    }
                    if (npc_5){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc5.dmg - GG.gg.def + (Math.random() * 11));
                        Game_Characters.npc5.hp = Game_Characters.npc5.hp - (GG.gg.dmg - Game_Characters.npc5.def + (Math.random() * 11));
                    }
                        if (krit){
                            if (npc_1) {
                                Game_Characters.npc1.hp = Game_Characters.npc1.hp - (GG.gg.dmg - Game_Characters.npc1.def + (Math.random() * 10));
                            }
                            if (npc_2){
                                Game_Characters.npc2.hp = Game_Characters.npc2.hp - (GG.gg.dmg - Game_Characters.npc2.def + (Math.random() * 15));
                            }
                            if (npc_3){
                                Game_Characters.npc3.hp = Game_Characters.npc3.hp - (GG.gg.dmg - Game_Characters.npc3.def + (Math.random() * 16));
                            }
                            if (npc_4){
                                Game_Characters.npc4.hp = Game_Characters.npc4.hp - (GG.gg.dmg - Game_Characters.npc4.def + (Math.random() * 17));
                            }
                            if (npc_5){
                                Game_Characters.npc5.hp = Game_Characters.npc5.hp - (GG.gg.dmg - Game_Characters.npc5.def + (Math.random() * 18));
                            }
                            System.out.println(" ");
                            System.out.println(" ");
                            System.out.println("!!!Криит!!!!");
                            System.out.println(" ");
                        }
                }
                if (hit.equals("сильный_выпад")){
                    GG.gg.st -= 25;
                    if (npc_1) {
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc1.dmg - GG.gg.def);
                        Game_Characters.npc1.hp = Game_Characters.npc1.hp - (GG.gg.dmg - Game_Characters.npc1.def) * 1.5;
                    }
                    if (npc_2){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc2.dmg - GG.gg.def);
                        Game_Characters.npc2.hp = Game_Characters.npc2.hp - (GG.gg.dmg - Game_Characters.npc2.def) * 2.0;
                    }
                    if (npc_3){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc3.dmg - GG.gg.def);
                        Game_Characters.npc3.hp = Game_Characters.npc3.hp - (GG.gg.dmg - Game_Characters.npc3.def) * 2.5;
                    }
                    if (npc_4){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc4.dmg - GG.gg.def);
                        Game_Characters.npc4.hp = Game_Characters.npc4.hp - (GG.gg.dmg - Game_Characters.npc4.def) * 3.0;
                    }
                    if (npc_5){
                        GG.gg.hp = GG.gg.hp - (Game_Characters.npc5.dmg - GG.gg.def);
                        Game_Characters.npc5.hp = Game_Characters.npc5.hp - (GG.gg.dmg - Game_Characters.npc5.def) * 3.5;
                    }
                        if ( krit){
                            if (npc_1) {
                                Game_Characters.npc1.hp = Game_Characters.npc1.hp - (GG.gg.dmg - Game_Characters.npc1.def + (Math.random() * 15));
                            }
                            if (npc_2){
                                Game_Characters.npc2.hp = Game_Characters.npc2.hp - (GG.gg.dmg - Game_Characters.npc2.def + (Math.random() * 17));
                            }
                            if (npc_3){
                                Game_Characters.npc3.hp = Game_Characters.npc3.hp - (GG.gg.dmg - Game_Characters.npc3.def + (Math.random() * 18));
                            }
                            if (npc_4){
                                Game_Characters.npc4.hp = Game_Characters.npc4.hp - (GG.gg.dmg - Game_Characters.npc4.def + (Math.random() * 19));
                            }
                            if (npc_5){
                                Game_Characters.npc5.hp = Game_Characters.npc5.hp - (GG.gg.dmg - Game_Characters.npc5.def + (Math.random() * 20));
                            }
                            System.out.println(" ");
                            System.out.println(" ");
                            System.out.println("!!!Mega Krit!!!!");
                            System.out.println(" ");
                    }
                }
                if (hit.equals("защита")){
                    GG.gg.st += 10;
                }
                if (hit.equals("свалить")){
                    Game_Locations.choice();
                }
                if (hit.equals("помощь")){
                    help();
                }


                    if (Game_Characters.npc1.hp > 0){
                        fight_npc_outset();
                    }else{
                        npc_1 = false;
                        Game_Characters.npc1.hp = Game_Characters.npc1.max_hp;
                        Game_Fight_Win.npc_1_win = true;
                        Game_Fight_Win.npc1_5_win();
                    }

                    if (Game_Characters.npc2.hp > 0){
                        fight_npc_outset();
                    }else{
                        npc_2 = false;
                        Game_Characters.npc2.hp = Game_Characters.npc2.max_hp;
                        Game_Fight_Win.npc_2_win = true;
                        Game_Fight_Win.npc1_5_win();
                    }

                    if (Game_Characters.npc3.hp > 0){
                        fight_npc_outset();
                    }else{
                        npc_3 = false;
                        Game_Characters.npc3.hp = Game_Characters.npc3.max_hp;
                        Game_Locations.choice();
                    }

                    if (Game_Characters.npc4.hp > 0){
                        fight_npc_outset();
                    }else{
                        npc_4 = false;
                        Game_Characters.npc4.hp = Game_Characters.npc4.max_hp;
                        Game_Locations.choice();
                    }

                    if (Game_Characters.npc5.hp > 0){
                        fight_npc_outset();
                    }else{
                        npc_5 = false;
                        Game_Characters.npc5.hp = Game_Characters.npc5.max_hp;
                        Game_Locations.choice();
                    }

                    if (GG.gg.hp <= 0){
                        System.exit(1);
                    }else{
                        fight_npc_outset();
                    }
            }
}
